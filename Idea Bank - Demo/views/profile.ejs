<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<%=include header.ejs%>
</head>
<body>

<nav class="navbar navbar-default navbar-inverse navbar-static-top container-fluid" role="navigation">
	<div class="navbar-header">

		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
			<span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
		</button> <a class="navbar-brand" href="#">Idea Bank</a>
	</div>

	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		<ul class="nav navbar-nav">
			<li class="active">
					<a href="project">Start A Project</a>
			<!--	<a href="#" data-toggle="modal" data-target="#myModal">Start A Project</a> -->
			</li>
			<li>
				<a href="/explore">Explore</a>
			</li>



		</ul>
		<form class="navbar-form navbar-left" role="search">
			<div class="form-group">
				<input type="text" class="form-control" />
			</div>
			<button type="submit" class="btn btn-default">
				Search
			</button>
		</form>
		<ul class="nav navbar-nav navbar-right">

			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings<strong class="caret"></strong></a>
				<ul class="dropdown-menu">
					<li>
						<a href="updateinfo">Update your Information</a>
					</li>
					<li>
						<a href="bankcredentials">Bank Credentials</a>
					</li>
				</ul>
			</li>
			<li>
				<a href="/logout">Log Out</a>
			</li>
		</ul>
	</div>

</nav>




<div class="container-fluid text-center">
	<div class="row content">
		<div class="col-sm-2 sidenav">
			<div class = "well">

				<h2>My Projects</h2>

				<% for(var i = 0; i < length; i++) {%>
				<!-- /profileForProject/ (array[i].name -> this is from render)  -->
				<p><a href="#"><%=array[i].name%></a></p>
				<% }%>

			</div>

			<div class= "well">

				<h2>My Teams</h2>
				<p><a href="#">Team 1</a></p>
				<p><a href="#">Team 2</a></p>
			</div>
		</div>

		<div class="col-sm-8 text-left">

			<div class="panel panel-default">
				<div class="panel-body">
					<div class = "well">
						<div class="row">
							<div class="col-md-4 column ui-sortable" style="display:table-cell; vertical-align:middle; text-align:center"><img src="images/demoprofilepic.jpg" class="img-circle" width="150" height="150"></div>
							<div class="col-md-8 column ui-sortable">
								<h1 id = "user-name"><%=user.local.firstName%>  <%=user.local.lastName%></h1>
								<div class="br-wrapper br-theme-bats-1to10">
									<h3> Rating</h3>
									<select id="userrating">
										<option value="1"></option>
										<option value="2"></option>
										<option value="3"></option>
										<option value="4"></option>
										<option value="5"></option>
										<option value="6"></option>
										<option value="7"></option>
										<option value="8"></option>
										<option value="9"></option>
										<option value="10"></option>
									</select>
								<!--	<button type="button" class="btn btn-primary btn-block">Collaborate with this user</button>-->

								</div>
							</div>
						</div>



					</div>



				</div><hr>
				<div class="well">
					<div class="row">
						<div class="form-group">
							<h3>&nbsp;&nbsp;Skills</h3>
							<textarea row="8" class="form-control" readonly>
								<%=user.personal.skills%>
							</textarea>
						</div>
					</div>
				</div>

			</div>

		</div>
		<div class="col-sm-2 sidenav">
			<div class = "well" style = "overflow: auto"  >

				<h2>Collaborating Projects</h2>

				<p><a href="#">Project 1</a></p>
				<p><a href="#">Project 2</a></p>
			</div>

			<div class = "well" style = "overflow: auto">

				<h2>Collaborating teams</h2>
				<p><a href="#">Team 1</a></p>
				<p><a href="#">Team 2</a></p>
			</div>
		</div>

	</div>
</div>


<br/>
<br/>
<br/>
<footer class="container-fluid text-center">
	<p>Idea Bank 2015</p>
</footer>
</body>
</html>
